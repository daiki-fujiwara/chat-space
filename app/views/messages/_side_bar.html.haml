.side-bar
  .side-bar__user-name
    .side-bar__user-name--top-items
      = current_user.name
      %ul.side-bar__user-name--top-items__icons
        %li.icon
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon-color')
        %li.icon
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: 'icon-color')
    
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            %a.under-line 
              = group.name 
          .group__new-message
            %a.under-line メッセージはまだありません。  
              = group.name 
          .group__new-message
            メッセージはまだありません。
